<% if @cart_items.any? %>
	<% @cart_items.each do |cart_item| %>
		<% product = cart_item.product %>
		<div>
			<%= link_to product.name, product_path(product) %>
		</div>
		<div>
			Price <%= product.price %>
		</div>
		<div>
			quantity
			<%= link_to 'minus', change_quantity_cart_item_path(cart_item, 'minus'), method: :patch %>
			<%= cart_item.quantity %>
			<%= link_to 'plus', change_quantity_cart_item_path(cart_item, 'plus'), method: :patch %>
		</div>
		<div>
			<%= link_to 'remove', cart_item_path(cart_item), method: :delete %>
		</div>
	<% end %>
<% end %>
<% @images.each do |image| %>
	<div id="image<%= image.id %>">
		<%= image_tag image.image.url(:thumb) %><br><br>
		<%= link_to "Delete", image_path(image), method: :delete, class: "button" %>
		<% unless image.default? %>
			<%= link_to "Make Thumb", make_thumb_image_path(image), method: :put, remote: true, class: "button", id: "make_thumb#{image.id}" %>
		<% end %>
	</div>	
<% end %>
<br>
<%= link_to "Back", product_path(@images.first.imageable), class: "button" %>
<%= link_to "Add New images", new_product_image_path(@images.first.imageable), class: "button" %>
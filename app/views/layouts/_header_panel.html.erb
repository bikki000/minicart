<% if user_signed_in? %>
	<span>
		<%= current_user.name.split(" ")[0] %>
	</span>
	<%= link_to 'log out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
	<span><%= link_to "Cart #{@no_of_cart_items}", cart_path(@cart) %></span>
<% else %>
	<div class="row header-actions">
		<div class="header-action">
			<%= link_to 'Login', new_user_session_path, class: "btn btn-primary btn-block" %>
		</div>
		<div class="header-action">
			<%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary btn-block" %>
		</div>
	</div>
<% end %>
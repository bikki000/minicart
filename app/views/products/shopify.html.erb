<%#= link_to "github per", github_per_path, method: :post, 'content-type' => 'application/json' %>
<div id="product_template" style="display:none">	
	<div id="product_container" class="row product-details-container">
		<div class="col-sm-4 product-image-conatiner">
			<img src="{image_source}" class="product-image">
		</div>
		<div class="col-sm-8 product-details">
			<label class="product-name">{title}</label>
			<label class="product-price">{price}</label>
			<a href="javascript:void(0)" id="{vid}" name="add_to_cart" onclick="shopify_buy_api.addToCart(this)">Add to cart</a>
		</div>
	</div>
</div>
<div id="lineItemTemplate" style="display:none">	
	<div id="{liid}" class="line-item-container">
		<label class="line-item-name">{title}</label>
		<div class="row temp1">
			<div class="col-sm-6 line-item-image-container">
				<img src="{image_source}" class="line-item-image">
			</div>
			<div class="col-sm-6 temp1-1">
				<label class="line-item-price">{price}</label>
				<a href="javascript:void(0)" data-liid="{liid}" onclick="shopify_buy_api.removeFromCart(this)" class="btn btn-danger">remove</a>
			</div>
		</div>
		<div class="row temp2">
			<div class="col-sm-3">
				<a href="javascript:void(0)" class="btn btn-warning" data-liid="{liid}" data-vid="{vid}" data-dir="minus" onclick="shopify_buy_api.updateLineItem(this)">-</a>
			</div>
			<div class="col-sm-6 quantity">
				<input type="text" value="{quantity}" disabled="true">
			</div>
			<div class="col-sm-3">
				<a href="javascript:void(0)" class="btn btn-warning" data-liid="{liid}" data-vid="{vid}" data-dir="plus" onclick="shopify_buy_api.updateLineItem(this)">+</a>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div id="product_list" class="col-sm-8">
		
	</div>
	<div id="cartList" class="col-sm-4">

	</div>
</div>
